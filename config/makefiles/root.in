GEN_PBC := \
 lua.pbc \
 luap.pbc

LUA_GROUP := $(PMC_DIR)/lua_group$(LOAD_EXT)

PMC_DEPS := \
 config/makefiles/pmc.in \
 $(PMC_DIR)/lua.pmc \
 $(PMC_DIR)/luaany.pmc \
 $(PMC_DIR)/luaboolean.pmc \
 $(PMC_DIR)/luabytecode.pmc \
 $(PMC_DIR)/luafunction.pmc \
 $(PMC_DIR)/luanil.pmc \
