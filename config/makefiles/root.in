DOCS := README

build: \
 $(LUA_GROUP) \
 $(LIB_PBCS) \
 $(LIBPATH)/luaperl.pbc \
 library/_helpers.pbc \
 library/alarm.pbc \
 library/base64.pbc \
 library/bc.pbc \
 library/bit.pbc \
 library/bitlib.pbc \
 library/complex.pbc \
#IF(has_opengl): library/gl.pbc \
#IF(has_opengl): library/gl_binding.pbc \
#IF(has_opengl): library/glut.pbc \
 library/lfs.pbc \
 library/lpeg.pbc \
